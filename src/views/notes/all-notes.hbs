<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                    <div class="card-body">
                        <h1 class="h4 card-title d-flex justify-content-between align-items-center"> 
                            {{title}} <a href="/notes/edit/{{ _id }}"><i class="fas fa-edit"></i></a>
                        </h1>
                        <div>
                            <p>
                                {{description}}
                            </p>
                        </div>
                        <form action="/notes/delete/{{ _id }}?_method=DELETE" method="POST"> 
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-block btn-sm">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <h1 class="text-center">Bienvenido {{ user.name }}</h1>
                        <p class="lead text-center">
                            ¡Hey aún NO posee Notas! ¿Que esperas para agregar una? ¡Haz click en Create Notes y comienza trabajar!
                        </p>
                        <a href="/notes/add" class="btn btn-primary btn-block"> Create Notes</a>
                    </div>
                </div>
            </div>
    {{/each}}
</div>